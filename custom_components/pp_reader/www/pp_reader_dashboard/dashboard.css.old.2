html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

pp-reader-dashboard {
  display: block;
  padding: 1rem;
  box-sizing: border-box;
  background: var(--card-background-color, #f0f2f5);
  color: var(--primary-text-color, #333);
  font-family: 'Inter', sans-serif;
  position: relative;
}

#theme-toggle {
  position: fixed;
  top: 1rem;
  right: 1rem;
  z-index: 1000;
  padding: 0.5rem 1rem;
  background: var(--primary-color, #3b82f6);
  color: #fff;
  border: none;
  border-radius: 0.5rem;
  box-shadow: 0 2px 6px rgba(0,0,0,0.2);
  font-size: 0.9rem;
  cursor: pointer;
  transition: background 0.3s ease, transform 0.2s ease;
}

.card {
  background: var(--card-background-color, #fff);
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  padding: 1rem;
  margin-bottom: 1.5rem;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.card h2 {
  position: sticky;
  top: 0;
  background: inherit;
  z-index: 2;
  padding-top: 0.5rem;
  padding-bottom: 0.5rem;
}

.card::-webkit-scrollbar {
  height: 8px;
}
.card::-webkit-scrollbar-thumb {
  background: rgba(0,0,0,0.2);
  border-radius: 4px;
}

.header-card,
.footer-card {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.header-card h1 {
  margin: 0;
  font-size: 1.5rem;
}
.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  font-size: 0.95rem;
}
.meta div strong {
  color: var(--primary-text-color, #111827);
}
.footer-card {
  margin-top: 1rem;
}

table {
  width: auto;
  min-width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin: 0;
}
th, td {
  padding: 0.75rem 1rem;
}
th {
  background: var(--primary-background-color, #fafafa);
  font-weight: 600;
  position: sticky;
  top: 0;
  z-index: 1;
  text-align: left;
}
.align-right {
  text-align: right;
}

tbody tr:nth-child(odd) {
  background: var(--secondary-background-color, #fcfcfc);
}
tbody tr:hover {
  background: var(--accent-color, #f5faff);
}

.footer-row td {
  font-weight: 700;
  background: var(--primary-background-color, #f9fafb);
}

.positive {
  color: var(--state-icon-color, #16a34a);
}
.negative {
  color: var(--error-color, #dc2626);
}

@media (max-width: 600px) {
  .meta { flex-direction: column; }
  table, th, td { font-size: 0.9rem; }
}
.scroll-container {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

/* Dark Mode manuell */
html.dark-mode pp-reader-dashboard {
  background: #1e1e1e;
  color: #e0e0e0;
}
html.dark-mode .card {
  background: #2c2c2c;
}
html.dark-mode th {
  background: #2c2c2c;
  color: #fafafa;
}
html.dark-mode tbody tr:nth-child(odd) {
  background: #1a1a1a;
}
html.dark-mode tbody tr:hover {
  background: #333333;
}
html.dark-mode .footer-row td {
  background: #2c2c2c;
  color: #fafafa;
}
html.dark-mode h2 {
  border-left-color: #90caf9;
}
html.dark-mode .positive {
  color: #4caf50;
}
html.dark-mode .negative {
  color: #f44336;
}
html.dark-mode .meta div strong {
  color: #e0e0e0;
}
