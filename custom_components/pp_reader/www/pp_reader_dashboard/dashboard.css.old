body {
  font-family: sans-serif;
  padding: 1rem;
}
h2 {
  margin-top: 1.5rem;
  color: #333;
}
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 1rem;
}
th, td {
  border: 1px solid #ccc;
  padding: 0.5rem;
  text-align: left;
}
th {
  background: #f5f5f5;
}
.align-right {
  text-align: right;
}
