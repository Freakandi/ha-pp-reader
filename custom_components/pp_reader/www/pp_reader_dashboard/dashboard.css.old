/* ===================================================================
   Dashboard CSS für Portfolio-Integration (HA Theme-kompatibel)
   =================================================================== */

/* Global: Seitenlayout & Overflow */
html, body {
  margin: 0;
  padding: 0;
  overflow-x: hidden;
}

/* Wrapper für Dashboard-Inhalt */
pp-reader-dashboard {
  display: block;
  padding: 1rem;
  box-sizing: border-box;
  background: var(--card-background-color, #f0f2f5);
  color: var(--primary-text-color, #333);
  font-family: 'Inter', sans-serif;
}

/* Karten: Container, Layout & Scroll */
.card {
  background: var(--card-background-color, #fff);
  border-radius: 0.5rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  padding: 1rem;
  margin-bottom: 1.5rem;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.card::-webkit-scrollbar {
  height: 8px;
}
.card::-webkit-scrollbar-thumb {
  background: rgba(0,0,0,0.2);
  border-radius: 4px;
}

/* Header- & Footer-Cards */
.header-card,
.footer-card {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}
.header-card h1 {
  margin: 0;
  font-size: 1.5rem;
}
.meta {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  font-size: 0.95rem;
}
.meta div strong {
  color: var(--primary-text-color, #111827);
}
.footer-card {
  margin-top: 1rem;
}

/* Tabellen-Grundlayout */
table {
  width: auto;
  min-width: 100%;
  border-collapse: separate;
  border-spacing: 0;
  margin: 0;
}
th, td {
  padding: 0.75rem 1rem;
}
th {
  background: var(--primary-background-color, #fafafa);
  font-weight: 600;
  position: sticky;
  top: 0;
  z-index: 1;
  text-align: left;
}
.align-right {
  text-align: right;
}

/* Gestreifte & Hover-Zeilen */
tbody tr:nth-child(odd) {
  background: var(--secondary-background-color, #fcfcfc);
}
tbody tr:hover {
  background: var(--accent-color, #f5faff);
}

/* Fußzeilen-Reihe (Summenzeile) */
.footer-row td {
  font-weight: 700;
  background: var(--primary-background-color, #f9fafb);
}

/* Überschriften in Karten */
h2 {
  margin-top: 0;
  font-size: 1.25rem;
  border-left: 4px solid var(--accent-color, #3b82f6);
  padding-left: 0.5rem;
}

/* Farb-Klassen für Gewinnwerte */
.positive {
  color: var(--state-icon-color, #16a34a);
}
.negative {
  color: var(--error-color, #dc2626);
}

/* Responsive Anpassungen */
@media (max-width: 600px) {
  .meta { flex-direction: column; }
  table, th, td { font-size: 0.9rem; }
}
